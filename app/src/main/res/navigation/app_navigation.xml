<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homenavgraph">


    <navigation android:id="@+id/homenavgraph"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.cocinamama.usecases.menuFragments.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_orderFragment"
                app:destination="@id/ordernavgraph" />
        </fragment>
    </navigation>
    <navigation android:id="@+id/ordernavgraph"
        app:startDestination="@id/orderFragment">
        <fragment
            android:id="@+id/orderFragment"
            android:name="com.example.cocinamama.usecases.menuFragments.OrderFragment"
            android:label="fragment_order"
            tools:layout="@layout/fragment_order">
            <action
                android:id="@+id/action_orderFragment_to_cartFragment"
                app:destination="@id/cartnavgraph" />
            <action
                android:id="@+id/action_orderFragment_to_orderDetailsFragment"
                app:destination="@id/orderDetailsFragment" />
            <action
                android:id="@+id/action_orderFragment_to_orderDetailsCancelFragment"
                app:destination="@id/orderDetailsCancelFragment" />
            <action
                android:id="@+id/action_orderFragment_to_orderDetailsCookFragment"
                app:destination="@id/orderDetailsCookFragment" />
            <action
                android:id="@+id/action_orderFragment_to_orderDetailsDeliveryFragment"
                app:destination="@id/orderDetailsDeliveryFragment" />
            <action
                android:id="@+id/action_orderFragment_to_orderDetailsFinishFragment"
                app:destination="@id/orderDetailsFinishFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsFragment"
            android:name="com.example.cocinamama.usecases.orderdetails.OrderDetailsFragment"
            android:label="fragment_order_details"
            tools:layout="@layout/fragment_order_details" >
            <action
                android:id="@+id/action_orderDetailsFragment_to_orderFragment"
                app:destination="@id/orderFragment" />
            <action
                android:id="@+id/action_orderDetailsFragment_to_orderDetailsCancelPopupFragment"
                app:destination="@id/orderDetailsCancelPopupFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsCancelFragment"
            android:name="com.example.cocinamama.usecases.orderdetails.OrderDetailsCancelFragment"
            android:label="fragment_order_details_cancel"
            tools:layout="@layout/fragment_order_details_cancel" >
            <action
                android:id="@+id/action_orderDetailsCancelFragment_to_orderFragment"
                app:destination="@id/orderFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsCookFragment"
            android:name="com.example.cocinamama.usecases.orderdetails.OrderDetailsCookFragment"
            android:label="fragment_order_details_cook"
            tools:layout="@layout/fragment_order_details_cook" >
            <action
                android:id="@+id/action_orderDetailsCookFragment_to_orderFragment"
                app:destination="@id/orderFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsCancelPopupFragment"
            android:name="com.example.cocinamama.usecases.orderdetails.OrderDetailsCancelPopupFragment"
            android:label="fragment_order_details_cancel_popup"
            tools:layout="@layout/fragment_order_details_cancel_popup" >
            <action
                android:id="@+id/action_orderDetailsCancelPopupFragment_to_orderDetailsCancelFragment"
                app:destination="@id/orderDetailsCancelFragment" />
            <action
                android:id="@+id/action_orderDetailsCancelPopupFragment_to_orderDetailsFragment"
                app:destination="@id/orderDetailsFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsDeliveryFragment"
            android:name="com.example.cocinamama.usecases.orderdetails.OrderDetailsDeliveryFragment"
            android:label="fragment_order_details_delivery"
            tools:layout="@layout/fragment_order_details_delivery" >
            <action
                android:id="@+id/action_orderDetailsDeliveryFragment_to_orderFragment"
                app:destination="@id/orderFragment" />
        </fragment>
        <fragment
            android:id="@+id/orderDetailsFinishFragment"
            android:name="com.example.cocinamama.usecases.comment.OrderDetailsFinishFragment"
            android:label="fragment_order_details_finish"
            tools:layout="@layout/fragment_order_details_finish" >
            <action
                android:id="@+id/action_orderDetailsFinishFragment_to_orderFragment"
                app:destination="@id/orderFragment" />
        </fragment>
    </navigation>
    <navigation android:id="@+id/cartnavgraph"
        app:startDestination="@id/cartFragment">
        <fragment
            android:id="@+id/cartFragment"
            android:name="com.example.cocinamama.usecases.menuFragments.CartFragment"
            android:label="fragment_cart"
            tools:layout="@layout/fragment_cart">
            <action
                android:id="@+id/action_cartFragment_to_bellFragment"
                app:destination="@id/bellnavgraph" />
        </fragment>
    </navigation>
    <navigation android:id="@+id/bellnavgraph"
        app:startDestination="@id/bellFragment">
        <fragment
            android:id="@+id/bellFragment"
            android:name="com.example.cocinamama.usecases.menuFragments.BellFragment"
            android:label="fragment_bell"
            tools:layout="@layout/fragment_bell">
            <action
                android:id="@+id/action_bellFragment_to_userFragment"
                app:destination="@id/usernavgraph" />
        </fragment>
    </navigation>
    <navigation android:id="@+id/usernavgraph"
        app:startDestination="@id/userFragment">
        <fragment
            android:id="@+id/userFragment"
            android:name="com.example.cocinamama.usecases.menuFragments.UserFragment"
            android:label="fragment_user"
            tools:layout="@layout/fragment_user" />
    </navigation>


</navigation>