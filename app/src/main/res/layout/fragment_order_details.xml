<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecases.orderdetails.OrderDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/txtOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Pedido Nro. #######"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Llega el 12 del marzo del 2022 entre 12:30 - 12:45"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:id="@+id/lyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                tools:ignore="InvalidId">

                <ImageView
                    android:id="@+id/statusStart"
                    android:background="@drawable/shape_color_primary"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/order"
                    app:tint="@color/white" />

                <View
                    android:id="@+id/statusLineCook"
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:background="@color/secondaryColor" />

                <ImageView
                    android:id="@+id/statusCook"
                    android:background="@drawable/shape_color_secondary"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/cook"
                    app:tint="@color/black" />

                <View
                    android:id="@+id/statusLineDelivery"
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:background="@color/secondaryColor" />

                <ImageView
                    android:id="@+id/statusDelivery"
                    android:background="@drawable/shape_color_secondary"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/delivery"
                    app:tint="@color/black" />

                <View
                    android:id="@+id/statusLineFinish"
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:background="@color/secondaryColor" />

                <ImageView
                    android:id="@+id/statusFinish"
                    android:background="@drawable/shape_color_secondary"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/finish"
                    app:tint="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="El pedido se ha generado, se puede cancelar 1 semana antes de la  fecha de entrega."
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar pedido"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center" />

            <View
                android:id="@+id/lineTopContact"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@color/primaryColor" />

            <LinearLayout
                android:id="@+id/lyContact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="@+id/lineTopContact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/lineBottomContact"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="180"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:text="Cocinera"
                        android:gravity="bottom|left"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtNameContact"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="top|left"
                        android:text="Mamá"
                        android:textSize="10dp"
                        />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibPhone"
                    android:background="@drawable/shape_color_secondary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/phone"
                    app:tint="@color/primaryColor" />

                <ImageButton
                    android:id="@+id/ibMessage"
                    android:background="@drawable/shape_color_secondary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chatting"
                    app:tint="@color/primaryColor" />
            </LinearLayout>

            <View
                android:id="@+id/lineBottomContact"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@color/primaryColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle de pedido"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOrderPriceTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="S/. 1360.00"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ListView
                android:id="@+id/listViewOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>